Private Sub EditRcvData()
    Dim objIntInfo   As clsIISIntInfo    '인터페이스 검체정보 클래스
    Dim objIntNms    As clsIISIntNms     '장비별 검사항목 컬렉션 클래스
    Dim strRcvBuf    As String  '수신한 Data
    Dim strRecordID  As String  '수힌한 RecordID
    Dim strBarNo     As String  '수신한 BarNo
    Dim strRackNo    As String  '수신한 Rack No
    Dim strPos       As String  '수신한 Tube Position
    Dim strIntBase   As String  '수신한 장비기준 검사명
    Dim strIntResult As String  '수신한 검사결과
    Dim strResult    As String  'LIS 검사결과
    Dim strFlag      As String  '수신한 Result Status
    Dim strInfo      As String  '추가정보
    Dim strTemp      As String
    
    strRcvBuf = mIntLib.Buffers(1).Buffers
    strRecordID = Mid$(strRcvBuf, 1, 1)
    
    Select Case strRecordID
        Case "J"    '## Joblist Request
            '## 바코드번호 조회
            strBarNo = Trim$(Mid(strRcvBuf, 2, 29))
            
            With mOrder
                .ClsClear
                .BarNo = strBarNo
            End With
            Call GetOrder(Format$(strBarNo, String$(SPCLEN, "#")))
            
        Case "D"    '## Sample Result Record
            '## 1.0.2: 이상대(2005-02-01)
            '   - RackNo를 6자리중 가운데 2자리만 표시하도록 수정
            '## 1.0.7: 이상대(2005-09-08)
            '   - 바코드에 Check Digts가 읽혀도 처리하도록 수정
            '## 바코드번호 조회, Rack No, Position 조회
            strBarNo = Mid$(Format$(Trim$(Mid$(strRcvBuf, 2, 29)), "#"), 1, SPCLEN)
            strRackNo = Mid$(Trim$(Mid$(strRcvBuf, 87, 10)), 3, 2)
            strPos = Trim$(Mid$(strRcvBuf, 97, 2))
            
            Set objIntInfo = New clsIISIntInfo
            With objIntInfo
                .BarNo = strBarNo
                .SpcPos = strPos & "/" & strRackNo
            End With
            
            '## 1.0.1: 이상대(2005-01-31)
            '   - 지수를 숫자형식으로 변환하는 대신 Val함수 사용
            '## 장비기준 검사명, 검사결과, Result Flags 조회
            strIntBase = Format$(Mid$(strRcvBuf, 31, 2), "00")
            strIntResult = Trim$(Mid$(strRcvBuf, 37, 15))
            strResult = Val(strIntResult)
            strFlag = Trim$(Format$(Mid$(strRcvBuf, 33, 4), "###0"))
            strInfo = GetInfo(strFlag)
            
            '## 결과저장
            Set objIntNms = mIntLib.IntNms
            If objIntNms.ExistIntBase(strIntBase & "N") Then
                strTemp = strIntBase & "N"
                Call objIntInfo.IntResults.Add(strTemp, objIntNms.GetIntNm(strTemp), strIntResult, _
                     strResult, strInfo)
            End If
            
            '## 같은코드의 정성결과에도 정량결과값을 입렵
            '   - 동국대학교 경주병원
            If PROJECTCODE = "A008" Then
                If objIntNms.ExistIntBase(strIntBase & "C") Then
                    strTemp = strIntBase & "C"
                    Call objIntInfo.IntResults.Add(strTemp, objIntNms.GetIntNm(strTemp), _
                         strIntResult, strResult, strInfo)
                End If
            End If
            
            Call SaveServer(objIntInfo)
            Set objIntNms = Nothing
            Set objIntInfo = Nothing
            
            '## ACK 전송
            MSComm.Output = ACK
            Call mIntLib.WriteLog(ACK, ccPCLog)
        
        Case "R"    '## Control Result Record
            '## 1.0.4: 이상대(2005-02-14)
            '   - Control Result 수신에 대한 처리추가
            
            '## ACK 전송
            MSComm.Output = ACK
            Call mIntLib.WriteLog(ACK, ccPCLog)
    End Select
End Sub

'-----------------------------------------------------------------------------'
'   기능 : 결과판정, 결과저장, 화면표시
'   인수 :
'       - pIntInfo : 인터페이스 검체정보 클래스
'-----------------------------------------------------------------------------'
Private Sub SaveServer(ByVal pIntInfo As clsIISIntInfo)
    Dim objAccInfo  As clsIISAccInfo    '접수내역 클래스
    Dim vBarNo      As Variant 'Spread의 바코드번호
    Dim strBarNo    As String  '바코드번호
    Dim strSpcYy    As String  '검체연도
    Dim lngSpcNo    As Long    '검체번호
    Dim i           As Long

    Me.MousePointer = vbHourglass

    strBarNo = pIntInfo.BarNo

    '## 결과판정
    If mIntLib.CheckResult(pIntInfo) = -1 Then
        '## 접수정보가 없을때 결과표시
        Call SetComplete1(pIntInfo)
        Call tblComplete_Click(1, tblComplete.DataRowCnt)
        Me.MousePointer = vbDefault
        Exit Sub
    Else
        '## 접수정보가 있을때 결과표시
        strSpcYy = Mid$(strBarNo, 1, SPCYYLEN)
        lngSpcNo = CLng(Mid$(strBarNo, SPCYYLEN + 1, SPCNOLEN))
        Set objAccInfo = mIntLib.AccInfos(strSpcYy, lngSpcNo)

        Call SetComplete2(objAccInfo)
        Call tblComplete_Click(1, tblComplete.DataRowCnt)

        '## ClientDb, Server에 결과저장
        Call mIntLib.SaveClientDb(strSpcYy, lngSpcNo)
        Call mIntLib.SaveResult(strSpcYy, lngSpcNo)

        Call mIntLib.Remove(strSpcYy, lngSpcNo)
        Set objAccInfo = Nothing

        StatusBar.Panels(2).Text = "검체번호:" & strBarNo & " 를 정상적으로 결과저장 했습니다."
    End If

    '## tblReady에서 전송된 검체삭제
    With tblReady
        For i = 1 To .DataRowCnt
            Call .GetText(TReadyEnum.ccBarNo, i, vBarNo)
            If CStr(vBarNo) = strBarNo Then
                Call .DeleteRows(i, 1)
                Exit For
            End If
        Next i
    End With

    Me.MousePointer = vbDefault
End Sub

