'-----------------------------------------------------------------------------'
'   기능 : 장비설정 정보조회, 포트 Open
'-----------------------------------------------------------------------------'
Private Sub GetEqpComm()
    Dim objComm     As clsIISEqpComm    '통신설정 클래스
    Dim strErrMsg   As String           '에러메시지

    '## 통신설정 정보조회
    Set objComm = mIntLib.GetEqpComm
    If objComm Is Nothing Then Exit Sub

    With objComm
        MSComm.CommPort = .Port
        MSComm.Settings = .GetSettings
    End With
    Set objComm = Nothing

On Error GoTo Errors
    '## 포트 Open
    With MSComm
        '## 이미 포트가 열린경우
        If .PortOpen Then
            strErrMsg = mEqpCd & " 장비의 통신포트가 이미 열려있습니다."
            Error.SetLog App.EXEName, "frmIISBNII", "GetEqpComm", strErrMsg, Now
            Call mIntLib_EqpError("E004")
            Exit Sub
        End If

        .RThreshold = 1
        .SThreshold = 1
        .RTSEnable = True
        .PortOpen = True
    End With

    '## 보관일이 지난데이터 삭제
    Call mIntLib.DelHistoryData
    Exit Sub

Errors:
    '## 다른 장치에서 포트를 사용하는 경우
    If Err.Number = 8005 Then
        strErrMsg = mEqpCd & " 장비에 설정된 포트가 이미 사용중입니다."
        Error.SetLog App.EXEName, "frmIISBNII", "GetEqpComm", strErrMsg, Now
        Call mIntLib_EqpError("E005")
    End If
End Sub

'-----------------------------------------------------------------------------'
'   기능 : 수신한 Result Flags에 대한 상세설명 조회
'-----------------------------------------------------------------------------'
Private Function GetInfo(ByVal pFlag As String)
    Dim strFlag     As String
    Dim strInfo     As String
    
    If pFlag = "" Then Exit Function
    
    strFlag = ToBin(pFlag)
    If strFlag = "" Then Exit Function
    
    Select Case Mid$(strFlag, 3, 2)
        Case "01":  strInfo = Space(2) & "Measurement above measuring range" & vbCrLf
        Case "10":  strInfo = Space(2) & "Measurement below measuring range" & vbCrLf
        Case "11":  strInfo = Space(2) & "Result not valid" & vbCrLf
    End Select
    
    Select Case Mid$(strFlag, 2, 1)
        Case "1":   strInfo = strInfo & Space(2) & "Sample is turbd" & vbCrLf
    End Select
    
    Select Case Mid$(strFlag, 1, 1)
        Case "1":   strInfo = strInfo & Space(2) & "A special predilution has been used by the analyzer" & vbCrLf
    End Select
    
    GetInfo = strInfo
End Function

'-----------------------------------------------------------------------------'
'   기능 : 0~15까지의 10진수를 이진수로 변환
'   인수 : 10진수
'   반환 : 해당 10진수의 이진수 표현
'-----------------------------------------------------------------------------'
Public Function ToBin(ByVal Number As Integer) As String
    Dim Result              As String
    Dim BinaryArray(1 To 8) As Integer
    Dim Counter             As Integer
    
    If (Number < 0) Or (Number > 15) Then Exit Function
    
    BinaryArray(1) = 1
    BinaryArray(2) = 2
    BinaryArray(3) = 4
    BinaryArray(4) = 8

    For Counter = 1 To 4
        If Number And BinaryArray(Counter) Then Result = Result & "1" Else Result = Result & "0"
    Next
    
    ToBin = StrReverse(Result)
End Function

